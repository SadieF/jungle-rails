<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>

<dt>Reviews</dt><br>
          <%= form_for :review, url: product_reviews_path(@product.id) do |f| %>
            <strong>Review this product:</strong>
            <ul>
              <%= f.fields_for :reviews do |reviews_form| %>
                  <%= reviews_form.label :description %>
                  <%= reviews_form.text_area :description %>

                  <%= reviews_form.label :rating %>
                  <%= reviews_form.select :rating, ['1', '2', '3', '4', '5'] %>
                  <%=reviews_form.submit("Submit") %>

              <% end %>
            </ul>
          <% end %>



  <div>
        <% @product.reviews.each do |review| %>

          <div class="col-sm-8">
            <dl class="dl-horizontal">
              <dt>User: </dt>
              <dd><%= review.user_id %></dd>
              <dt>Description: </dt>
              <dd> <%= review.description %></dd>
              <dt>Rating: </dt>
              <dd><%= review.rating %></dd><br>
             </dl>
          </div>
        <% end %>
    </div>
  </article>
</section>
